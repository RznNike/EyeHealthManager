<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">
        
        <LinearLayout
            android:id="@+id/layoutScrollableContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_8"
                android:backgroundTint="@color/colorBackgroundLight"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:text="@string/tests"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackgroundGray"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonTestingSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/settings_testing" />

            </LinearLayout>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_8"
                android:backgroundTint="@color/colorBackgroundLight"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:text="@string/settings_data"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackgroundGray"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/export" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackground"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonImportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/import_string" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackground"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonDeleteDuplicates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/delete_duplicates" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackground"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonClearJournal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/clear_journal" />

            </LinearLayout>
    
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_8"
                android:backgroundTint="@color/colorBackgroundLight"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:text="@string/settings_other"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackgroundGray"/>

                <LinearLayout
                    android:id="@+id/buttonLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/language"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewCurrentLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorTextDark"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Русский"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewArrowFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_arrow_button_right"
                        android:tint="@color/colorTextDark"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackground"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonAboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/about_app" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_rounded_8"
                    android:backgroundTint="@color/colorBackground"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonChangelog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:drawableEnd="@drawable/ic_arrow_button_right"
                    android:drawableTint="@color/colorTextDark"
                    android:text="@string/changelog" />

            </LinearLayout>
    
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            
        </LinearLayout>
    
    </ScrollView>

    <ru.rznnike.eyehealthmanager.app.ui.view.ProgressView
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:pv_background="@color/colorBackgroundA50"
        app:pv_progress_color="@color/colorAccent"
        app:pv_text_color="@color/colorAccent"
        app:pv_text="@string/please_wait"/>

</FrameLayout>

